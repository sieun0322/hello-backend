{
  "name": "mcp-echo",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start:stdio": "node dist/index.js",
    "start:sse": "node dist/server.js",
    "dev:stdio": "tsx src/index.ts",
    "dev:sse": "tsx --watch src/server.ts",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
